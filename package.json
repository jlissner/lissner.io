{
  "name": "lissner-family-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\" --names \"frontend,api\" --prefix-colors \"blue,green\"",
    "dev:frontend": "cd ui && next dev",
    "dev:api": "cd api && npx nodemon index.js",
    "dev:frontend-only": "cd ui && next dev",
    "dev:mock": "cd ui && cross-env NEXT_PUBLIC_USE_MOCK_API=true next dev",
    "build": "cd ui && next build",
    "start": "cd ui && next start",
    "lint": "cd ui && next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "setup-admin": "node scripts/setup-admin.js",
    "api:start": "cd api && node index.js",
    "api:deploy": "cd api && npx serverless deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.470.0",
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/client-ses": "^3.470.0",
    "@aws-sdk/client-sts": "^3.470.0",
    "@aws-sdk/lib-dynamodb": "^3.470.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "exif-parser": "^0.1.12",
    "express": "^4.18.2",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "next": "14.0.4",
    "nodemailer": "^6.9.7",
    "postcss": "^8.4.32",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "serverless-http": "^3.2.0",
    "sharp": "^0.33.0",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "happy-dom": "^18.0.1",
    "nodemon": "^3.0.2",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
